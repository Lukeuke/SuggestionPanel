@model SuggestionPanel.Domain.DTOs.SuggestionRequest

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Suggestion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Problem" class="control-label"></label>
                <input asp-for="Problem" class="form-control" />
                <span asp-validation-for="Problem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solution" class="control-label"></label>
                <input asp-for="Solution" class="form-control" />
                <span asp-validation-for="Solution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValueStreamId" class="control-label"></label>
                <select asp-for="ValueStreamId" class="form-control" asp-items="ViewBag.ValueStreams"></select>
            </div>
            <div class="form-group">
                <label asp-for="StationNumber" class="control-label"></label>
                <input asp-for="StationNumber" class="form-control" />
                <span asp-validation-for="StationNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCardAnomaly" /> @Html.DisplayNameFor(model => model.IsCardAnomaly)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="OwnerCardNumber" class="control-label"></label>
                <input asp-for="OwnerCardNumber" class="form-control" />
                <span asp-validation-for="OwnerCardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostId" class="control-label"></label>
                <select asp-for="CostId" class ="form-control" asp-items="ViewBag.CostId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
