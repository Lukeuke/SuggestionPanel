@model SuggestionPanel.Domain.DTOs.SuggestionReviewRequest

@{
    ViewData["Title"] = "Edit";
}

<h1>Suggestion</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" readonly hidden />
            </div>
            <div class="form-group">
                <label asp-for="Problem" class="control-label"></label>
                <input asp-for="Problem" class="form-control" readonly />
                <span asp-validation-for="Problem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solution" class="control-label"></label>
                <input asp-for="Solution" class="form-control" readonly />
                <span asp-validation-for="Solution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StationNumber" class="control-label"></label>
                <input asp-for="StationNumber" class="form-control" readonly />
                <span asp-validation-for="StationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfSubmission" class="control-label"></label>
                <input asp-for="DateOfSubmission" class="form-control" readonly />
                <span asp-validation-for="DateOfSubmission" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCardAnomaly" readonly /> @Html.DisplayNameFor(model => model.IsCardAnomaly)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ImplementationDesc" class="control-label"></label>
                <input asp-for="ImplementationDesc" class="form-control" />
                <span asp-validation-for="ImplementationDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropositionDate" class="control-label"></label>
                <input asp-for="PropositionDate" class="form-control" />
                <span asp-validation-for="PropositionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImplementationDate" class="control-label"></label>
                <input asp-for="ImplementationDate" class="form-control" />
                <span asp-validation-for="ImplementationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Delete" class="control-label"></label>
                <input asp-for="Delete" class="form-control" placeholder="ex.: 'True' or 'False' " />
                <span asp-validation-for="Delete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
